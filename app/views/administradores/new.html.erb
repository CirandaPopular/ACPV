<div class="container">
  <h1>Adicionar Administrador</h1>
  <br>
  <%= form_with scope: :administrador, url: administradores_path, local: true do |formulario| %>
    <% if @administrador.errors.any? %>
      <div id="erro_inscricao">
        <h2 style="color:red;">
          <%= pluralize(@administrador.errors.count, "erro") %> :
        </h2>
        <ul style="list-style-type: none;">
          <% @administrador.errors.full_messages.each do |mensagem| %>
            <li class="alert alert-danger" role="alert"><%= mensagem %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="row">
      <div class="col-sm-6">
        <p>
          <%= formulario.label value='Nome completo' %><br>
          <%= formulario.text_field :nome, class:'form-control' %>
        </p>
      </div>
      <div class="col-sm-6">
        <p>
          <%= formulario.label value='E-mail' %><br>
          <%= formulario.email_field :email, class:'form-control' %>
        </p>
      </div>
    </div>
    <div class = "row">
      <div class="col-sm-6">
        <p>
          <%= formulario.label value='Telefone (WhatsApp)' %><br>
          <%= formulario.text_field :telefone, class:'form-control' %>
        </p>
      </div>
    </div>
    <p>
      <%= formulario.label value='Em que cidade você administra o curso?' %><br>
      <%= formulario.select :cidade_voluntario, [%w(Garanhuns cidade_voluntario_Recife),%w(Recife cidade_voluntario_Garanhuns)],{},:id=>"cidade_voluntario" %>
    </p>
    <p>
      <%= formulario.submit value='Concluir Inscrição', id:"concluir_inscricao", class:'btn btn-success' %>
    </p>
    <p>
      <%= link_to 'Voltar', ciranda_popular_inicio_path %>
    </p>
  <% end %>
</div>
